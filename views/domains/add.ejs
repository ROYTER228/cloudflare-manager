<div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            Добавить новый домен
        </h3>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
        <form action="/domains/add" method="POST">
            <div class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">
                        Доменное имя
                    </label>
                    <div class="mt-1">
                        <input type="text" name="name" id="name" required
                            class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"
                            placeholder="example.com">
                    </div>
                </div>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="text-red-500 text-sm">
                        <%= error %>
                    </div>
                <% } %>

                <div class="flex justify-end">
                    <a href="/domains" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3">
                        Отмена
                    </a>
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Добавить
                    </button>
                </div>
            </div>
        </form>
    </div>
</div> 